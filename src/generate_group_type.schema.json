      "description": "this is debug",
      "x-groups": ["primary-key", "secondary-key"]
    },
    "not-selected": {
      "type": "boolean",
      "description": "use all which is not filtered",
      "default": false
    },
    "output-format": {
      "type": "string",
      "description": "format TS for Typescript, JSchema for JSON Schema",
      "default": "TS"
