    "output-dir": {
      "type": "string",
      "default": "./",
      "x-groups": ["primary-key", "top-key"]
    },
    "include-path": {
      "type": "string",
      "default": "./"
    },
    "input-files": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "filter": {
      "$ref": "file://./filter.schema.json"
    },
    "filters": {
      "type": "array",
      "items": {
        "$ref": "file://./filter.schema.json"
      }
    }
  },
  "required": ["input-files", "output-dir", "filter", "include-path", "output-format"]
}
